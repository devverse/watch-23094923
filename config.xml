<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="1"
	version 	= "1"
	id        = "com.watch.shop">

	<preference name="phonegap-version" value="2.9.0" />
	<preference name="fullscreen" value="false" />

	<name>The watch shop</name>

	<description>
		Watch shop mobile app. Mens Watches
	</description>

	<author href="devverse@gmail.com"
		email="devverse@gmail.com">
		Just Run
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.4" />
		<gap:platform name="webos" />
		<gap:platform name="symbian.wrt" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<!-- General -->
	<icon src="icons/icon.png" width="72" height="72" />
	<icon src="icons/icon.png" width="48" height="48" />
	<icon src="icons/icon.png" width="36" height="36"  gap:role="default"  />

    <gap:splash src="splash.jpg" />
	<feature name="http://api.phonegap.com/1.0/network"/>

	 <preference name="exit-on-suspend" value="false" />

</widget>
