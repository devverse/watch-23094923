<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	versionCode="2"
	version 	= "1.5"
	id        = "com.watch.shop">

	<preference name="phonegap-version" value="3.5.0" />
	<preference name="fullscreen" value="false" />

	<name>Watchify</name>

	<description>
		Watchify. Mens Watches Mobile Shop
	</description>

	<author href="devverse@gmail.com"
		email="devverse@gmail.com">
	</author>

	<gap:platforms>
		<gap:platform name="android" minVersion="2.4" />
		<gap:platform name="blackberry" project="widgets"/>
	</gap:platforms>

	<!-- General -->
	<icon src="icons/icon.png" width="72" height="72" />
	<icon src="icons/icon.png" width="48" height="48" />
	<icon src="icons/icon.png" width="36" height="36"  gap:role="default"  />

    <gap:splash src="splash.png" />
	<feature name="http://api.phonegap.com/1.0/network"/>
	
	<gap:plugin name="org.apache.cordova.inappbrowser" version="0.2.4" />
</widget>
